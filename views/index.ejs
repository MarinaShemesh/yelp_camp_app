<% include partials/header %>

<div class="container">
  <header class="jumbotron">
   <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new camp</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
     <% campground.forEach(function(foo){ %>
         <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img  src="<%= foo.image %>">
                <div class="caption"><h4><%= foo.name %></h4></div>
            </div> 
            <p>
              <a class="btn btn-primary" href="/campgrounds/<%= foo._id %>">More info</a>
            </p>            
        </div>
     <% }); %>
    </div>

</div>

<% include partials/footer %>